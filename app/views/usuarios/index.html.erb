<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Apelido</th>
      <th>Telefone</th>
      <th>Genero</th>
      <th>Data de nascimento</th>
      <th>Roles mask</th>
      <th>Nome da empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.apelido %></td>
        <td><%= usuario.telefone %></td>
        <td><%= usuario.genero %></td>
        <td><%= usuario.data_de_nascimento %></td>
        <td><%= usuario.roles_mask %></td>
        <td><%= usuario.nome_da_empresa %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

