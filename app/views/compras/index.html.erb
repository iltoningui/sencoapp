<p id="notice"><%= notice %></p>

<h1>Compras</h1>
<div>
  <div class="col m4">
      <div class="row">
          <div class="col s12 m7">
            <div class="card">
              <div class="card-image">
                <img src="/assets/mac.jpg">
                <span class="card-title">Nome do produto</span>
              </div>
              <div class="card-content">
                <p>descricao do produto</p>
              </div>
              <div class="card-action">
                  <a href="#" class="waves-effect waves-light btn" style="font-size: 10px;">Pagar</a>
                  <span class="right">
                    <a href="#" class="waves-effect waves-light btn" style="font-size: 10px;">Encomendar</a>
                  </span>
                </div>
            </div>
          </div>
      </div>
  </div>
  <div class="col m8">
      <div class="row">
      <table>
        <thead>
          <tr>
            <th>Cartao numero</th>
            <th>Pin cartao</th>
            <th>Carrinho</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @compras.each do |compra| %>
            <tr>
              <td><%= compra.cartao_numero %></td>
              <td><%= compra.pin_cartao %></td>
              <td><%= compra.carrinho %></td>
              <td><%= link_to 'Show', compra %></td>
              <td><%= link_to 'Edit', edit_compra_path(compra) %></td>
              <td><%= link_to 'Destroy', compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table><br>
      <%= link_to 'New Compra', new_compra_path %>
      </div>
  </div>
</div>
